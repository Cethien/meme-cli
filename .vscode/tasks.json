{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/StickerGen/StickerGen.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish:lx",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/StickerGen/StickerGen.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:AssemblyName=memer",
                "/p:PublishSingleFile=true",
                "--self-contained",
                "true",
                "--os",
                "linux"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish:win",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/StickerGen/StickerGen.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "/p:AssemblyName=memer",
                "/p:PublishSingleFile=true",
                "--self-contained",
                "true",
                "--os",
                "win"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/StickerGen/StickerGen.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}